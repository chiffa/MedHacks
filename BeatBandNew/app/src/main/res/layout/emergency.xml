<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ceced1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you OK?"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#716c6c"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/u7j"
        android:layout_above="@+id/gridLayout"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <RelativeLayout
        android:layout_width="396dp"
        android:layout_height="392dp"
        android:background="#f27d8d"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="167dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:textColor="#f27d8d" />

        <Button
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:text="I&apos;m OK"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="25dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#f8db84" />

        <Button
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:text="TEXT A FRIEND"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f8db84"
            android:layout_below="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="165dp"
            android:layout_height="150dp"
            android:text="CALL 911"
            android:id="@+id/button3"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#f89877" />

    </RelativeLayout>

</RelativeLayout>